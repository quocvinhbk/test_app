<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Occupational category name</th>
      <th>Title</th>
      <th>Base salary</th>
      <th>Employment type</th>
      <th>Work hours</th>
      <th>Description</th>
      <th>Education requirements</th>
      <th>Date posted</th>
      <th>Valid through</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company.name %></td>
        <td><%= job.occupational_category.name %></td>
        <td><%= job.title %></td>
        <td><%= job.base_salary %></td>
        <td><%= job.employment_type_cd %></td>
        <td><%= job.work_hours %></td>
        <td><%= job.description %></td>
        <td><%= job.education_requirements %></td>
        <td><%= job.date_posted %></td>
        <td><%= job.valid_through %></td>
        <td><%= link_to 'Show', manage_job_path(job) %></td>
        <td><%= link_to 'Edit', edit_manage_job_path(job) %></td>
        <td><%= link_to 'Destroy', manage_job_path(job), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_manage_job_path %>
