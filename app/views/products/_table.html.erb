
<table>
  <thead>
    <tr>
      <%# <th>Name</th> %>
      <%# <th>Price</th> %>
      <%# <th>Category</th> %>

      <th><strong>#</strong></th>
      <%# <th><%= link_to "Name", sort: "name" </th> %>
      <%# <th><%= link_to "Price", sort: "price" </th> %>
      <%# <th>"Category"</th> %>
      <%# <th><%= link_to "Created", sort: "created_at"</th> %>

      <th><%= sortable "name"  %></th>
      <th><%= sortable "price"  %></th>
      <th><%= sortable "category_id"  %></th>
      <th id="lb_published">Published</th>
      <th><%= sortable "created_at"  %></th>

      <%# <th id="lb_name">Name</th> %>
      <%# <th id="lb_price">Price</th> %>
      <%# <th id="lb_category">Category</th> %>
      <%# <th id="lb_published">Published</th> %>
      <%# <th id="lb_created">Created at</th> %>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name %></td>
        <td><%= check_box_tag "published", false, product.published? ,disabled: true %></td>
        <td><%= product.created_at %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
